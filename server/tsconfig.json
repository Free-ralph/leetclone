{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext", 
    "target": "ES2020", 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}